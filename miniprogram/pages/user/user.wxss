/* pages/user/user.wxss */
.content {
  background-color: #2196F3;
  height: 320rpx;
  width: 100%;
  position: relative;
}
.row1 {
  z-index: 10000;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.row1 .left {
  display: flex;
  align-items: center;
  padding: 40rpx 40rpx;
}
.row1 .left image {
  width: 140rpx;
  height: 140rpx;
  background-color: #fff;
  border-radius: 50%;
}
.row1 .left .text {
  margin-left: 28rpx;
}
.row1 .left .text .user-name {
  font-size: 44rpx;
  color: #fff;
}
.row1 .left .text .id {
  font-size: 28rpx;
  color: #fff;
}
.row1 .right .qd-btn {
  width: 140rpx;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 68rpx;
  margin-right: 20rpx;
  border-radius: 40rpx;
  color: #fff;
  background-color: #FBC02D;
  box-shadow: rgba(0, 0, 0, 0.2) 0px 2px 6px 0px;
}
.row2 {
  position: absolute;
  bottom: 0;
  margin: 0 40rpx;
  background-color: rgba(255, 255, 255, 0.8);
  height: 120rpx;
  border-radius: 10rpx 10rpx 0 0;
  width: calc(100% - 80rpx);
  display: flex;
  justify-content: space-between;
}
.row2 .left {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
}
.row2 .left image {
  width: 80rpx;
  height: 80rpx;
  background-color: #2196F3;
  border-radius: 50%;
}
.row2 .left .text {
  margin-left: 22rpx;
}
.row2 .left .text .title {
  font-size: 40rpx;
  color: #333;
}
.row2 .left .text .small-text {
  margin-top: 8rpx;
  font-size: 28rpx;
  color: #999999;
}
.row2 .right {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  color: #999999;
}